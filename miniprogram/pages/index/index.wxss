/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  margin: 60rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: black;
  margin-bottom: 20rpx;
}

.userinfo-nickname::after {
  border: none;
}

.enter {
  display: flex;
  width: 100%;
}

.button-enter {
  display: flex;
  align-content: center;
  justify-content: center;
  margin: 20rpx;
  width: 100%;
  font-size: 40rpx;
  color: black;
  background-color: white;
}