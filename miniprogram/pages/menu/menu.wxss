page {
  background: #f6f6f6;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.menu-item {
  margin: 20rpx;
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
  border-radius: 10%;
}

.item-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  background-size: cover;
}

.userinfo-avatar:after {
  border: none;
}

.item-name {
  font-size: 32rpx;
  color: black;
}

.item-name::after {
  border: none;
}